page{
    background-color: #dedede;
    padding:20rpx;
}
/* 搜索 */
.search_row{
    display: flex;
    height: 70rpx;
}
input{
    flex: 4;
    background-color: #fff;
    height: 100%;
    padding-left: 20rpx;
}
button{
    flex: 1;
   height: 100%;
   font-size: 28rpx;
   margin-left: 20rpx;
}
/* 按钮 */
.search_content{
    margin-top: 30rpx;
}
.search_item{
    background-color: #fff;
    font-size: 26rpx;
    padding: 15rpx 10rpx;
    border-bottom: 1px solid #ccc;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-bottom: 3rpx;
}
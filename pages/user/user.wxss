page{
    background-color: #edece8;
}
/* 头部个人图片 */
.user_info_wrap{
    position: relative;
    height: 45vh;
    overflow: hidden;
}
.user_bg{
    height: 50vh;
   /* 高斯模糊 */
    filter: blur(10rpx);
}
.user_img_wrap{
  position: relative;
}
.user_info{
  position: absolute;
  left: 50%;
  top:20%;
  transform: translateX(-50%);
  text-align: center;
}
.user_icon{
   width: 150rpx;
   height: 150rpx;
   border-radius: 50%;
}
.user_name{
    color:#fff;
    margin-top: 40rpx;
}

.user_btn{
     position: absolute;
     left:50%;
     transform: translateX(-50%);
     top:40%;
     border:1rpx solid greenyellow;
     color:greenyellow;
     font-size: 38rpx;
     padding: 30rpx;
     border-radius: 10rpx;
}
/* 内容 */
.user_content{
    position: relative;
}
.user_main{
    color:#666;
    position: absolute;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    top:-30rpx;
    padding-bottom: 100rpx;
}
/* 历史记录 */
.history_wrap{
    background-color: #fff;
    display: flex;
}
.history_wrap navigator{
    flex:1;
    text-align: center;
    padding:10rpx 0;
}
.his_num{
    color:var(--themeColor);
}
/* 我的订单 */
.orders_wrap{
    background-color: #fff;
    margin-top: 30rpx;
}
.orders_title{
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}
.order_content{
    display: flex;
}
.order_content navigator{
    padding: 15rpx;
    flex: 1;
    text-align: center;

}
.iconfont{
    color:var(--themeColor);
    font-size: 40rpx;
}
/* 收货地址管理 */
.address_wrap{
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx ;
}
/* 应用信息相关  */
.app_info_wrap{
    margin-top: 30rpx;
    background-color: #fff;
}
.app_info_item{
    padding: 20rpx ;
    border-bottom: 1px solid #ccc;
}
.contact{
    display: flex;
    justify-content: space-between;
}
/* 推荐给其他人 */
.recommend_wrap{
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx ;
}
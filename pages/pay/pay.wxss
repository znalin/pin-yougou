/* 收货地址按钮 */
  /* 收货详细地址 */
  .user_row{
    display: flex;
    padding:20rpx;
  }
  .user_row .user_info{
    flex:5;
  
  }
  .user_row .user_phone{
    flex:3;
    text-align:right ;
  }
  /* 购物车内容 */
  .cart_content  .cart_title{
      padding:20rpx;
      font-size: 36rpx;
      line-height: 36rpx;
      color: var(--themeColor);
      border-top: 1rpx soild currentColor;
      border-bottom: 1rpx soild currentColor;
  }
  .cart_item{
    display: flex;
    padding:20rpx;
    border-bottom: 1rpx solid #000;
  }
  .cart_img_wrap{
    flex:2;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .cart_img_wrap image{
    width: 80%;
  }
  /* 商品信息 */
  .cart_info_wrap{
    flex:4;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }
  .goods_name{
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color:#666;
  }
  .goods_price_wrap{
    display: flex;
    justify-content: space-between;
  }
  .goods_price{
    color: var(--themeColor);
    font-size: 30rpx;
  }
  .cart_num_tool{
    display: flex;
  }     
  .goods_num{
    width: 55rpx;
    height: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  } 
  /* 底部标签栏 */
  .footer_tool{
    position: fixed;
    bottom: 0;
    left:0;
    width: 100%;
    height:90rpx;
    background-color: #fff;
    display: flex;
    border-top: 1rpx solid #ccc;
  }
  .total_price_wrap{
    flex:5;
    text-align: right;
    padding-right: 15rpx;
  }
  .total_price_text{
    color:var(--themeColor);
    font-size: 32rpx;
    font-weight: 600;
  }
  .order_pay_wrap{
    flex: 3;
    background-color: var(--themeColor);
    color:#fff;
    font-size: 32rpx;
    line-height: 90rpx;
    font-weight: 600;
    display: flex;
    justify-content: center;
    align-content: center;
  }
  page{
    padding-bottom: 90rpx;
  }
  
  
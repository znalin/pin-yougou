/* 按钮 */
.collect_main{
    background-color: #f3f4f6;
}
.collect_title{
    display: flex;
    padding:40rpx 0;
}
.collect_tips{
    padding:15rpx;
    border:1rpx solid #ccc;
    margin-left: 25rpx;
    background-color: #fff;
}
.active{
    color:var(--themeColor);
    border-color: currentColor;
}

/* 内容 */
.goods_item{
    display: flex;
    border-bottom: 1rpx solid #ccc;
    background-color: #fff;
  }
  .goods_img_warp{
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .goods_img_warp image{
    width: 70%;
  }
  .goods_info_wrap{
    flex:3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }
  .goods_name{
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-oriebt: vertical;
    -webkit-line-clamp: 2;
  }
  .goods_price{
    color:var(--themeColor);
    font-size: 30rpx;
  
  }
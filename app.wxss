@import "./styles/iconfont.wxss";
/* 在小程序中，不支持* */
page,view,text,swiper,swiper-item,image,navigator{
  padding:0;
  margin:0;
  box-sizing:border-box;
}
/* 主题颜色  通过变量来实现
1.less 中存在变量这个知识
2.原生的css和wxss也是支持变量的
*/
/* 定义主题颜色 */
page{
  --themeColor:#eb4450;
  /* 定义统一字体大小 1px=2rpx   14px=28rpx*/
  font-size: 28rpx;
}
image{
  width: 100%;
}
